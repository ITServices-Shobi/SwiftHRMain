                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Alert!</h4>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-outline" data-dismiss="modal">Ok</button>
                </div>
            </div>
            @*/.modal-content*@
        </div>
        @*/.modal-dialog*@
    </div>
</section>

<script>
    function validateData(event) {
        var IsAnyEmpty = false;
        var alertMsg = "";

        if (document.getElementById("txtCompanyName").value == "") {
            IsAnyEmpty = true;
            alertMsg = "Company Name <br />";
        }
        if (document.getElementById("txtMobNo").value == "") {
            IsAnyEmpty = true;
            alertMsg = alertMsg + "Mobile <br />";
        }
        if (document.getElementById("txtGSTNo").value == "") {
            IsAnyEmpty = true;
            alertMsg = alertMsg + "GST No <br />";
        }
        if (document.getElementById("txtPANNo").value == "") {
            IsAnyEmpty = true;
            alertMsg = alertMsg + "PAN No <br />";
        }

        if (IsAnyEmpty) {

            event.preventDefault();

            document.getElementById("btnAlert").click();

            $('#alertBody').html('<p>' + alertMsg + '<br /> can not be empty </p>');
            debugger;

            IsAnyEmpty = true;
        }


        return IsAnyEmpty;
    }

</script>